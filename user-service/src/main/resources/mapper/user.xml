<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">	  
<mapper namespace="kr.co.bit.user_service.service.UserMapper">
    <select id="getUser" resultType="kr.co.bit.user_service.model.User" parameterType="String">
        select * from msa_user where id=#{id}
    </select>
    <insert id="insertUser" parameterType="kr.co.bit.user_service.model.User">
        insert into msa_user (id, passwd, name, tel, role )
        values (#{id}, #{passwd}, #{name}, #{tel, jdbcType=VARCHAR}, #{role})
    </insert>
    <select id="existsUserById" parameterType="String" resultType="int" >
        select count(*) from msa_user where id=#{id}
    </select>
</mapper>